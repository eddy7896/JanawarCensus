# Database Configuration
POSTGRES_USER=janawar
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=janawar
POSTGRES_SERVER=db
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=your_redis_password
REDIS_HOST=redis
REDIS_PORT=6379

# Application Settings
ENVIRONMENT=development
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost", "http://localhost:3000", "http://localhost:8000"]

# File Storage
UPLOAD_DIR=./data/audio
MAX_FILE_SIZE_MB=100
ALLOWED_EXTENSIONS=.wav,.mp3,.flac

# BirdNET Configuration
BIRDNET_MODEL_PATH=./birdnet_models/checkpoints/V2.4/BirdNET_GLOBAL_6K_V2.4_Model
BIRDNET_LABELS_PATH=./birdnet_models/checkpoints/V2.4/BirdNET_GLOBAL_6K_V2.4_Labels.txt
BIRDNET_CLASSIFIER_LABELS=./birdnet_models/checkpoints/V2.4/BirdNET_GLOBAL_6K_V2.4_Classifier_Labels.txt
BIRDNET_MDATA_MODEL_PATH=./birdnet_models/checkpoints/V2.4/BirdNET_GLOBAL_6K_V2.4_MData_Model_V2_FP32.tflite
BIRDNET_SENSITIVITY=1.0
BIRDNET_OVERLAP=0.0
BIRDNET_MIN_CONFIDENCE=0.5

# Audio Processing
SAMPLE_RATE=44100
CHANNELS=1
RECORDING_DURATION=60  # seconds

# Storage Management
MAX_STORAGE_GB=100
MIN_FREE_SPACE_GB=10

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# API Settings
API_PREFIX=/api/v1
PROJECT_NAME=Janawar Bird Census
PROJECT_VERSION=1.0.0

# First Superuser
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=changeme

# Email Settings (for notifications)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.example.com
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
EMAILS_FROM_EMAIL=no-reply@janawar.app
EMAILS_FROM_NAME="Janawar Bird Census"
